<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.iu.main.bookAccountDAO">
	<select id="getList"  parameterType="BookAccountDTO" resultType="BookAccountDTO">
		SELECT ACCOUNT, ACCOUNTBALANCE, ACCOUNTDATE
		FROM BOOKACCOUNT
		WHERE ID = #{id}
	</select>
	
	<select id="getDetail" parameterType="BookAccountDTO" resultType="BookAccountDTO">
		SELECT * FROM BOOKACCOUNT
		WHERE ACCOUNTNUM=#{accountNum}
	</select>
	
	<insert id="setAdd" parameterType="BookAccountDTO">
		INSERT INTO BOOKACCOUNT
		VALUES (ACCOUNT_SEQ.NEXTVAL, #{id}, #{bookNum} , #{account}, #{accountPassword}, #{accountBalance}, SYSDATE)
	</insert>
	
	<delete id="setDelete" parameterType="BookAccountDTO">
		DELETE BOOKACCOUNT WHERE ACCOUNTNUM=#{accountNum}
	</delete>
	
	<update id="setUpdate" parameterType="BookAccountDTO">
		UPDATE BOOKACCOUNT SET
		ACCOUNTPASSWORD=#{accountPassword},
		ACCOUNTBALANCE=#{accountBalance}
		WHERE ACCOUNTNUM=#{accountNum}
	</update>
</mapper>